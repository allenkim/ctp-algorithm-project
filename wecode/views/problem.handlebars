<link rel="stylesheet" href="/public/css/problem.css">

<div id="problem_body" class="body_padding">
<div class="row">
  <div class="col s5">
    <div id="problem_text">
      <iframe src="http://docs.google.com/gview?url=https://uva.onlinejudge.org/external/111/11172.pdf&embedded=true"
      frameborder="0"></iframe>
    </div>
  </div>

  <div class="col s7">
    <div id="chatbox_container">
      <div id="messages_section">
        <div id="messages"></div>
      </div>
      <div id="user_input_section">
        <form action="" style="margin: 0;" id="chat_form">
          <input id="chatbox_input" autocomplete="off" placeholder="Type your message"></input>
          <a id="send_message_button" href="#" onclick="$('#chat_form').submit()">Send</a>
        </form>
        <span id="user_typing" class="hidden">Placeholder</span>
      </div>
    </div>


  <div id="download_input_container" class="row">
    <div class="col s8"style="padding:0px;">
      <div class="file-field input-field">
        <div class="waves-effect waves-light btn" id="problem_input">
          <span>Download Input File</span>
          <input type="file" class="hidden">
        </div>
        <div class="file-path-wrapper hidden">
          <input class="file-path validate" type="text" readonly="readonly">
        </div>
      </div>

      <div id="upload_output" class="file-field input-field">
        <div class="waves-effect waves-light btn">
          <span>Upload output file</span>
          <input id="user_output" type="file">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" readonly="readonly">
        </div>
      </div>

      <div id="upload_source" class="file-field input-field">
        <div class="waves-effect waves-light btn">
          <span>Upload source code</span>
          <input id="source_code" type="file">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" readonly="readonly">
        </div>
      </div>
    </div>
    <div class="col s4" style="padding:0px">
      <button id="submit_problem" class="btn waves-effect waves-light" type="submit" name="action" style="margin-top: 5.5rem; float:right;">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </div>

</div>
</div>

<script src="/socket.io-client/socket.io.js" defer></script>
<script src="/file-saver/FileSaver.min.js" defer></script>
<script src="/public/js/problem.js" defer></script>
